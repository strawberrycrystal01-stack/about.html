  <img id="dress1" src="dress1.png" style="display:none;">
  <img id="dress2" src="dress2.png" style="display:none;">
</div>

<div class="buttons">
  <button onclick="changeDress('dress1')">ワンピ</button>
  <button onclick="changeDress('dress2')">コート</button>
  <button onclick="changeDress('none')">ぬぐ</button>
</div>

<script>
function changeDress(id) {
  document.getElementById("dress1").style.display = "none";
  document.getElementById("dress2").style.display = "none";

  if (id !== "none") {
    document.getElementById(id).style.display = "block";
  }
}
</script>

